---
import BaseLayout from "@layouts/BaseLayout.astro";

const data = { title: 'Examples - ODS Charts' }

export function getStaticPaths() { return [{ params: { version: '0.1.1' } }] }
---

<BaseLayout data={data}>
  <div class="title-bar">
    <div class="container-xxl">
      <h1 class="display-1">Examples</h1>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-line-charts.png" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Single line chart</h6>
            <p class="card-text">Used to display quantitative values over a continuous interval or time period.</p>
            <a href="https://system.design.orange.com/0c1af118d/p/88be1e-line-chart/t/49412d" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./single-line-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-double-line-charts.png" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Multiple line chart</h6>
            <p class="card-text">Compare the relationship between several values over time.</p>
            <a href="https://system.design.orange.com/0c1af118d/p/88be1e-line-chart/t/74b580" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./multiple-line-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-bar-charts.png" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Bar chart</h6>
            <p class="card-text">Used to compare related data sets.</p>
            <a href="https://system.design.orange.com/0c1af118d/p/68a692-bar-chart/t/47ab68" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./bar-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-stacked-bar-charts.png" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Stacked bar chart</h6>
            <p class="card-text">Compare proportional contributions within a category.</p>
            <a href="https://system.design.orange.com/0c1af118d/p/68a692-bar-chart/t/241b98" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./stacked-bar-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-mixed-charts.png" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Bar + line chart</h6>
            <p class="card-text">Two metric values showing quantity alongside changes in trends over time.</p>
            <a href="https://system.design.orange.com/0c1af118d/p/68a692-bar-chart/t/66991e" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./bar-line-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-pie-charts.png" class="card-img-top" alt="" />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Pie chart</h6>
            <p class="card-text">Divides data into sectors that each represent a proportion of the whole.</p>
            <a href="https://design.orange.com/0c1af118d/p/13c921-pie-and-donut-charts/t/10ead7" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./pie-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4 col-md-6 align-self-stretch py-2">
        <div class="card h-100">
          <img src="/images/ods-donut-charts.png" class="card-img-top" alt="" />
          <div class="card-body">
            <h5 class="card-title">Orange Design System</h5>
            <h6 class="card-subtitle">Donut chart</h6>
            <p class="card-text">Shows the relationship of parts to a whole.</p>
            <a href="https://design.orange.com/0c1af118d/p/13c921-pie-and-donut-charts/t/80abab" class="card-link">Orange Design System - Data display</a>
          </div>
          <div class="card-footer">
            <a href="./donut-chart/" class="btn btn-primary mt-3">Go to example</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
